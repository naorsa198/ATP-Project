<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="CENTER" maxHeight="700.0" maxWidth="400.0" minHeight="700.0" minWidth="400.0" prefHeight="700.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.MainPageController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <ImageView fx:id="image_background" fitHeight="703.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true" GridPane.rowIndex="1">
         <image>
            <Image url="@../../resources/images/menuBackground.jpg" />
         </image>
      </ImageView>
      <Button fx:id="newButton" alignment="BASELINE_CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#OpenNewGameWindow" prefHeight="151.0" prefWidth="264.0" text="New Game" translateX="68.0" />
      <Button fx:id="load_game_button" alignment="BASELINE_CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#LoadGame" prefHeight="151.0" prefWidth="264.0" text="Load Game" translateX="65.0" GridPane.rowIndex="1" />
      <Button fx:id="highScoresButton" alignment="BASELINE_CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#showHighScores" prefHeight="151.0" prefWidth="264.0" text="High Scores" translateX="68.0" GridPane.rowIndex="2" />
   </children>
</GridPane>
