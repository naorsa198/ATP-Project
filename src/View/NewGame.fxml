<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="528.0" prefWidth="748.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.NewGameController">
   <children>
      <ImageView fx:id="showed_char" fitHeight="200.0" fitWidth="200.0" layoutX="427.0" layoutY="194.0" pickOnBounds="true" preserveRatio="true" />
      <Label layoutX="131.0" layoutY="32.0" text="Choose Your Maze:" textAlignment="CENTER" textOverrun="CENTER_WORD_ELLIPSIS">
         <font>
            <Font name="Broadway" size="48.0" />
         </font>
      </Label>
      <VBox layoutX="25.0" layoutY="102.0" prefHeight="152.0" prefWidth="220.0">
         <children>
            <Label text="Enter Rows number:">
               <font>
                  <Font name="System Bold" size="17.0" />
               </font>
            </Label>
            <TextField fx:id="rows" prefHeight="40.0" prefWidth="367.0" text="10" />
            <Label text="Enter Columns number:">
               <font>
                  <Font name="System Bold" size="17.0" />
               </font>
            </Label>
            <TextField fx:id="cols" prefHeight="40.0" prefWidth="162.0" text="10" />
         </children>
      </VBox>
      <Button fx:id="start_game" layoutX="229.0" layoutY="442.0" mnemonicParsing="false" onAction="#generateMazeOnView" prefHeight="63.0" prefWidth="244.0" text="Start Game" />
      <Label layoutX="446.0" layoutY="111.0" prefHeight="26.0" prefWidth="162.0" text="Choose Character:" textAlignment="CENTER" textOverrun="CENTER_ELLIPSIS">
         <font>
            <Font name="System Bold" size="17.0" />
         </font>
      </Label>
      <Button layoutX="375.0" layoutY="279.0" mnemonicParsing="false" onAction="#getPrevChar" text="&lt;" />
      <Button layoutX="642.0" layoutY="279.0" mnemonicParsing="false" onAction="#getNextChar" text="&gt;" />
      <Label fx:id="char_name_label" layoutX="493.0" layoutY="147.0" text="NAME###" />
      <ImageView fx:id="stam_tmuna" fitHeight="150.0" fitWidth="220.0" layoutX="25.0" layoutY="264.0" pickOnBounds="true" preserveRatio="true" />
   </children>
</AnchorPane>
